<div class="container mt-4">
  <div class="card">
    <div class="card-body">
      <h2 class="card-title mb-4">会員一覧</h2>
      <div class="table-responsive">
        <table class="table mb-0">
          <thead>
            <tr>
              <th>会員名</th>
              <th>メール</th>
              <th>登録日</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td>
                  <%= link_to "#{user.last_name} #{user.first_name}", admin_user_path(user), class: "text-decoration-none" %>
                </td>
                <td><%= user.email %></td>
                <td><%= user.created_at.strftime("%Y-%m-%d") %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="d-flex justify-content-center">
        <%= paginate @users %>
      </div>
    </div>
  </div>
</div>
  