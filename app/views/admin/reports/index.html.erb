<div class="container mt-4">
    <h2 class="mb-4">通報一覧</h2>
  
    <table class="table table-bordered table-hover table-sm">
      <thead class="thead-light">
        <tr>
          <th>投稿タイトル</th>
          <th>投稿者</th>
          <th>通報件数</th>
          <th>最新通報理由</th>
          <th>最新通報者</th>
          <th>最新通報日時</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <% latest_report = post.reports.order(created_at: :desc).first %>
          <tr>
            <td>
              <%= link_to post.title, admin_post_path(post), class: "text-primary font-weight-bold" %>
            </td>
            <td><%= post.user.full_name %></td>
            <td>
              <%= link_to post.reports.count, admin_post_report_path(post, latest_report), class: "text-primary" %>
            </td>
            <td><%= truncate(latest_report.reason, length: 50) %></td>
            <td><%= latest_report.user.full_name %></td>
            <td><%= latest_report.created_at.strftime('%Y/%m/%d %H:%M') %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  
    <div class="d-flex justify-content-center">
      <%= paginate @posts %>
    </div>
  </div>
  