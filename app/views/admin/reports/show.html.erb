<div class="container mt-4">
    <h2 class="mb-4">通報詳細</h2>

    <div class="card mb-4">
      <div class="card-body">
        <h4>
          <%= link_to @post.title, admin_post_path(@post), class: "text-primary" %>
        </h4>
        <p>投稿者: <%= @post.user.full_name %></p>
        <p><%= simple_format(@post.body) %></p>
        <div class="row">
          <% if @post.images.attached? %>
            <% @post.images.each do |img| %>
              <div class="col-md-3 mb-2">
                <%= image_tag img.variant(resize: "200x200"), class: "img-thumbnail" %>
              </div>
            <% end %>
          <% else %>
            <div class="col-md-3 mb-2">
              <%= image_tag "no_image_logo.png", class: "img-thumbnail", size: "200x200" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <h5>通報一覧</h5>
    <table class="table table-bordered table-hover">
      <thead class="thead-light">
        <tr>
          <th>通報者</th>
          <th>理由</th>
          <th>通報日時</th>
        </tr>
      </thead>
      <tbody>
        <% @reports.each do |report| %>
          <tr>
            <td><%= report.user.full_name %></td>
            <td><%= report.reason %></td>
            <td><%= report.created_at.strftime('%Y/%m/%d %H:%M') %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="mt-3">
      <%= link_to '投稿を削除する', admin_post_path(@post), method: :delete,
                  data: { confirm: '本当に削除しますか？' },
                  class: "btn btn-danger" %>
      <%= link_to '投稿詳細へ', admin_post_path(@post), class: "btn btn-secondary ml-2 mr-2" %>
      <%= link_to '通報一覧へ', admin_reports_path, class: "btn btn-warning" %>
    </div>
  </div>
