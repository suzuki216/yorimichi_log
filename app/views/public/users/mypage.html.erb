<div class="container my-5">

  <div class="card mb-4 shadow-sm">
    <div class="card-body">
      <h2 class="card-title">マイページ</h2>
      <p class="card-text">こんにちは、<strong><%= @user.last_name %> <%= @user.first_name %></strong>さん</p>
      <p class="card-text">メール： <%= @user.email %></p>
      <div class="mt-3">
        <%= link_to "プロフィール編集", edit_public_user_path(@user), class: "btn btn-outline-primary mr-2" %>
        <%= link_to "退会する", public_user_path(@user), method: :delete, data: { confirm: "本当に退会しますか？" }, class: "btn btn-outline-danger" %>
      </div>
    </div>
  </div>

  <h3 class="mb-3">あなたの投稿一覧</h3>

  <% if @posts.any? %>
    <div class="table-responsive">
      <table class="table table-hover table-bordered">
        <thead class="thead-light">
          <tr>
            <th scope="col">サムネイル</th>
            <th scope="col">タイトル</th>
            <th scope="col">投稿日</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td class="align-middle">
                <% if post.images.attached? %>
                  <%= image_tag post.images.first, class: "img-thumbnail" %>
                <% else %>
                  <span class="text-muted">画像なし</span>
                <% end %>
              </td>
              <td class="align-middle">
                <%= link_to post.title, public_post_path(post) %><br>
                <small class="text-muted">
                  (<%= post.comments.size %>件のコメント)
                </small>
              </td>
              <td class="align-middle">
                <%= post.created_at.strftime("%Y/%m/%d") %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="d-flex justify-content-center">
      <%= paginate @posts %>
    </div>
  <% else %>
    <p class="text-center">まだ投稿はありません</p>
  <% end %>
</div>
