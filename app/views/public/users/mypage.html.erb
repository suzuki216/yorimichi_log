<div class="container my-5">
  <h2 class="card-title">マイページ</h2>
  <p class="card-text">こんにちは、<strong><%= @user.last_name %> <%= @user.first_name %></strong>さん</p>
  <%= link_to "通報した投稿一覧を見る", public_user_reports_path(@user), class: "btn btn-warning mb-3" %>
  <div class="card mb-4 shadow-sm">
    <div class="card-body d-flex align-items-start">
      <div class="mr-4">
        <% if @user.image.attached? %>
          <%= image_tag @user.image.variant(resize: "120x120"), class: "rounded-circle shadow-sm" %>
        <% else %>
          <%= image_tag "no_image.jpg", size: "120x120", class: "rounded-circle shadow-sm" %>
        <% end %>
      </div>
  
      <div class="flex-grow-1 d-flex">
        <div class="me-4 flex-grow-1">
          <p class="card-text mb-2"><strong>メール：</strong> <%= @user.email %></p>
          <p class="text-muted mb-0">
            <%= @user.introduction.present? ? @user.introduction : "自己紹介" %>
          </p>
        </div>
  
        <div class="d-flex flex-column mr-4">
          <%= link_to "フォロー中: #{@user.followings.count}", public_user_followings_path(@user), class: "btn btn-outline-primary mb-2" %>
          <%= link_to "フォロワー: #{@user.followers.count}", public_user_followers_path(@user), class: "btn btn-outline-secondary" %>
        </div>
  
        <div class="d-flex flex-column">
          <%= link_to "プロフィール編集", edit_public_user_path(@user), class: "btn btn-outline-primary mb-2" %>
          <%= link_to "退会する", public_user_path(@user), method: :delete, data: { confirm: "本当に退会しますか？" }, class: "btn btn-outline-danger" %>
        </div>
      </div>
    </div>
  </div>

  <h3 class="mb-3">あなたの投稿一覧</h3>

  <% if @posts.any? %>
    <div class="table-responsive">
      <table class="table table-hover table-bordered">
        <thead class="thead-light">
          <tr>
            <th scope="col">画像</th>
            <th scope="col">タイトル</th>
            <th scope="col">投稿日</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td class="align-middle">
                <% if post.images.attached? %>
                  <%= image_tag post.images.first.variant(resize: '400x400'), class: "img-thumbnail" %>
                <% else %>
                  <%= image_tag 'no_image_logo.png', class: "img-thumbnail", alt: "No Image" %>
                <% end %>
              </td>
              <td class="align-middle">
                <%= link_to post.title, public_post_path(post) %><br>
                <small class="text-muted">
                  (<%= post.comments.size %>件のコメント)
                </small>
              </td>
              <td class="align-middle">
                <%= post.created_at.strftime("%Y/%m/%d") %><br>
                <div id="favorite_btn_<%= post.id %>">
                  <%= render "public/favorites/btn", post: post %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="d-flex justify-content-center">
      <%= paginate @posts %>
    </div>
  <% else %>
    <p class="text-center">まだ投稿はありません</p>
  <% end %>
</div>
