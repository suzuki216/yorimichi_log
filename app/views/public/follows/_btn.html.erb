<% if user_signed_in? && !current_user.guest? %>
  <% if current_user.following?(user) %>
    <%= button_to "フォロー解除", public_user_follows_path(user, current_user.active_follows.find_by(followed_id: user.id)),
                  method: :delete, class: "btn btn-outline-danger btn-sm" %>
  <% else %>
    <%= button_to "フォローする", public_user_follows_path(user),
                  method: :post, class: "btn btn-outline-primary btn-sm" %>
  <% end %>
<% end %>
